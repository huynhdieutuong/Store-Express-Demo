<h1>{{title}}</h1>
<div class="row">
  <form action="/auth/register" method="post" class="col-md-4">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" name="name" id="name" {{#if values}} value={{values.name}} {{/if}} required>
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" class="form-control" name="email" id="email" {{#if values}} value={{values.email}} {{/if}} required>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" name="password" id="password" required>
    </div>
    <div class="form-group">
      <label for="password2">Confirm Password</label>
      <input type="password" class="form-control" name="password2" id="password2" required>
    </div>
    <button class="btn btn-primary">Sign Up</button>
  </form>
</div>